# syntax=docker/dockerfile:1.4
FROM golang:1.25-alpine AS builder

RUN apk --no-cache add git
WORKDIR /app

COPY go.mod go.sum ./
RUN --mount=type=cache,target=/go/pkg/mod \
    go mod download

COPY . .

ARG VERSION=dev
ARG COMMIT=unknown
ARG DATE=unknown

RUN --mount=type=cache,target=/root/.cache/go-build \
    --mount=type=cache,target=/go/pkg/mod \
    CGO_ENABLED=0 GOOS=linux go build -v \
    -ldflags="-s -w \
        -X github.com/drewjocham/mongo-migration-tool/internal/cli.appVersion=${VERSION} \
        -X github.com/drewjocham/mongo-migration-tool/internal/cli.commit=${COMMIT} \
        -X github.com/drewjocham/mongo-migration-tool/internal/cli.date=${DATE}" \
    -o /app/mongo-tool ./cmd/

FROM mongodb/mongodb-mcp-server:1.3.1

USER root
WORKDIR /app

COPY --from=builder /app/mongo-tool /app/mongo-tool
RUN chmod +x /app/mongo-tool && \
    ln -s /app/mongo-tool /usr/local/bin/mongo-tool

ENTRYPOINT ["/app/mongo-tool", "mcp"]
